<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Carousel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <%= link_to '<i class="fa fa-cubes"></i> CRSL'.html_safe, '#', class: 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li<%= ' class="active"'.html_safe if controller_name == 'carousels' %>><%= link_to t('activerecord.models.carousels'), carousels_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t 'layouts.hello', name: current_user.name %> <i class="fa fa-caret-down"></i></a>
              <ul class="dropdown-menu">
                <li><%= link_to ('<i class="fa fa-cog"></i> ' + t('activerecord.models.settings')).html_safe, edit_user_registration_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to ('<i class="fa fa-sign-out"></i> ' + t('devise.views.sign_out')).html_safe, destroy_user_session_path, method: :delete %>
              </ul>
            <li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if alert %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <b class="fa fa-warning"></b> <%= alert %>
        </div>
      <% end %>
      <% if notice %>
        <div class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <b class="fa fa-info-circle"></b> <%= notice %>
        </div>
      <% end %>

      <%= yield %>

      <footer>
        <p><%= t 'layouts.footer' %></p>
      </footer>
    </div>
  </body>
</html>
