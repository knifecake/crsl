<h3>Change your password</h3>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: t('devise.views.new_password'), required: true, autofocus: true, hint: (t('devise.views.minimum_password_length', characters: @minimum_password_length) if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: t('devise.views.confirm_new_password'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.views.submit_password_change') %>
  </div>
<% end %>
